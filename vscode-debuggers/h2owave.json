{
    "configurations": [
        {
            "name": "Debug Wave App",
            "type": "python",
            "request": "launch",
            // Path to your wave installation, usually inside virtual env.
            "program": "/Users/USERNAME/.pyenv/versions/VIRTUALENV/bin/wave",
            // Path to python you are using, usually inside virtual env.
            "cwd": "${workspaceFolder}/app/",
            "python": "/Users/USERNAME/.pyenv/versions/VIRTUALENV/bin/python",
            "args": [
                "run",
                "FILENAME.py",
            ],
            "env": {
                // "H2O_WAVE_NO_LOG": "1",
                // "H2O_WAVE_OIDC_SKIP_LOGIN": "1"
            }
        }
    ]
}